
doctype html
html(lang="pl")
	head
		meta(charset="UTF-8")
		title Google Login

	style
		include ./css/index.css
	body
		div.container
			h1 Log in to proceed
			form(action='http://localhost:3000/logged', method='GET')
				input(type='text', name='login', placeholder='Login')
				input(type='password', name='password', placeholder='Password', required)
				input.sending(type='submit', value='Log In')
      
				<a href="/auth/google">Login with google